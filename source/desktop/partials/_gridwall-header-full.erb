<section class="heading padding-left--50 padding-top--50 padding-bottom--40 -clear">
    <div class="col col--3of4">
        <div class="heading__title padding-top--15 padding-bottom--10 -text--left">
            <div class="h2 h2--title">
                <span class="js-gridwall-title" data-gender="Men&rsquo;s" data-product="Shoes" data-category="All">
                    Men&rsquo;s 
                    <% if current_page.data.category != "All" %><%= current_page.data.category %><% end %> 
                    <% if current_page.data.product != "All" %><%= current_page.data.product %><% end %>
                </span>
                <span class="parens margin-left--5 js-gridwall-total"><%= @total_products[@total_id] %></span>
            </div>
        </div>
    </div>
    <div class="col col--1of4">
        <div class="heading__sort padding-left--15 -text--right">
            <%= partial "desktop/partials/sort-desktop" %>
        </div>
    </div>
</section>